{
  "name": "naologic-test",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:incr": "tsc -p tsconfig.build.json --incremental --tsBuildInfoFile dist/src.tsbuildinfo",
    "build:watch": "npm run build:incr -- --watch --preserveWatchOutput",
    "build:clear": "rimraf dist/*",
    "ts": "tsx",
    "simulate": "npm run ts -- bin/simulate.ts",
    "start": "npm run simulate",
    "vitest": "VITE_CJS_IGNORE_WARNING=true vitest",
    "test": "npm run test:types && npm run test:unit",
    "test:unit": "npm run vitest -- run",
    "test:unit:verbose": "VERBOSE=1 npm run test:unit",
    "test:unit:silent": "npm run test:unit 2>&1 | grep -E '(AssertionError|FAIL)' || echo TESTS OK",
    "test:types:test": "tsc -p tsconfig.test.json --incremental --tsBuildInfoFile dist/test.tsbuildinfo",
    "test:types:bin": "tsc -p bin/tsconfig.json --incremental --tsBuildInfoFile dist/bin.tsbuildinfo",
    "test:types": "npm run test:types:test && npm run test:types:bin",
    "test:verbose": "VERBOSE=1 npm run test",
    "test:all": "npm run lint:full:silent && npm run test:types && npm run test:unit:silent",
    "eslint": "eslint --cache --cache-strategy content",
    "lint": "npm run eslint -- '{src,bin}/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "lint:full": "npm run build:incr && npm run lint:fix",
    "lint:full:silent": "npm run -s lint:full && echo LINT OK"
  },
  "dependencies": {
    "lodash": "^4.17.23",
    "luxon": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^9.6.1",
    "@types/lodash": "^4.17.23",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.10",
    "@types/rimraf": "^4.0.5",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.1.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": "^24.11.1",
    "npm": "^11.0.0"
  },
  "author": "Ariel Flesler <aflesler@gmail.com> (https://github.com/flesler/)",
  "license": "MIT"
}
